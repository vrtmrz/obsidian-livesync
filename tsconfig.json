{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "inlineSourceMap": true,
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ES2018",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [
            "svelte",
            "node"
        ],
        // "importsNotUsedAsValues": "error",
        "importHelpers": false,
        "alwaysStrict": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "es2018",
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "es2019.array",
            "ES2020.BigInt",
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "pouchdb-browser-webpack"
    ]
}